<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/parent_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="15dp"
    android:elevation="10dp"
    android:background="@color/lightGray"
    android:foreground="?attr/selectableItemBackground" >

    <TextView
        android:id="@+id/tv_sentTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HÃ¥kon Schia"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_transactiondate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sentTo"
        android:textColor="@android:color/background_light"
        android:text="21:02:10" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sentTo"
        android:layout_toRightOf="@+id/tv_transactiondate"
        android:layout_marginStart="20sp"
        android:textColor="@android:color/background_light"
        android:text="110.00" />

    <TextView
        android:id="@+id/tv_balanceAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sentTo"
        android:layout_toRightOf="@id/tv_amount"
        android:layout_marginStart="20sp"
        android:textColor="@android:color/background_light"
        android:text="100.00" />

    <ImageView
        android:id="@+id/img_profilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        tools:srcCompat="@drawable/clean_shaven" />

</RelativeLayout>